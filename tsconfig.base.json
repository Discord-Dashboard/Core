{
  "references": [
    { "path": "packages/auth" },
    { "path": "packages/api" },
    { "path": "packages/react" },
    { "path": "packages/contracts" },
    { "path": "packages/velo-theme" },
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts",
    "apps/**/*.ts",
    "apps/**/*.tsx"
  ]
}